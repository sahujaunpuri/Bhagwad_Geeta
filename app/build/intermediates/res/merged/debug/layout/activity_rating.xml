<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/holo_red_dark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar4" />

    <TextView
        android:text="Rate Our App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:id="@+id/textView7"
        android:textSize="@dimen/font3"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="If you like this app, please take few seconds to rate us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/textView9"
        android:textSize="@dimen/font3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="50dp">

    <ImageView
        android:id ="@+id/rating1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/chakra_2"
        android:layout_marginEnd="15dp"
        android:visibility="visible" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rating2"
            android:src="@mipmap/chakra_2"
            android:layout_toEndOf="@+id/rating1"
            android:layout_marginEnd="15dp"
            android:visibility="visible"/>
        <ImageView
            android:id ="@+id/rating3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/chakra_2"
            android:layout_toEndOf="@+id/rating2"
            android:layout_marginEnd="15dp"
            android:visibility="visible" />
        <ImageView
            android:id ="@+id/rating4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/chakra_2"
            android:layout_toEndOf="@+id/rating3"
            android:layout_marginEnd="15dp"
            android:visibility="visible" />
        <ImageView
        android:id ="@+id/rating5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/chakra_2"
        android:layout_toEndOf="@+id/rating4"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/view9"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        />
</LinearLayout>