<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    cardview:cardCornerRadius="5dp"
    android:background="@color/colorwhite"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_layout">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:textColor="@color/colorMaroon"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true" />
    <CheckBox
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/textView47"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/textView47"
        android:visibility="visible"
        />
        <Button
             android:id ="@+id/day1"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:text="S"
             android:textColor="@color/textcolor"
             android:background="@drawable/button_normal"
             android:layout_below="@+id/checkBox3"
             android:padding="1dp"
             android:layout_marginTop="15dp"
             android:layout_alignStart="@+id/checkBox3"
             android:layout_marginEnd="14dp"
             android:visibility="gone"
             />
            <Button
                android:id ="@+id/day2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="M"
                android:textColor="@color/textcolor"
                android:background="@drawable/button_normal"
                android:layout_marginEnd="14dp"
                android:layout_alignTop="@+id/day1"
                android:layout_toEndOf="@+id/day1"
                android:visibility="gone" />
        <Button
            android:id ="@+id/day3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="T"
            android:layout_marginEnd="14dp"
            android:textColor="@color/textcolor"
            android:background="@drawable/button_normal"
            android:layout_alignTop="@+id/day1"
            android:layout_toEndOf="@+id/day2"
            android:visibility="gone" />
        <Button
            android:id ="@+id/day4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="W"
            android:textColor="@color/textcolor"
            android:layout_marginEnd="14dp"
            android:background="@drawable/button_normal"
            android:layout_alignTop="@+id/day1"
            android:layout_toEndOf="@+id/day3"
            android:visibility="gone" />
        <Button
            android:id ="@+id/day5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="T"
            android:textColor="@color/textcolor"
            android:layout_marginEnd="14dp"
            android:background="@drawable/button_normal"
            android:layout_alignTop="@+id/day1"
            android:layout_toEndOf="@+id/day4"
            android:visibility="gone" />
        <Button
            android:id ="@+id/day6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="F"
            android:textColor="@color/textcolor"
            android:layout_marginEnd="14dp"
            android:background="@drawable/button_normal"
            android:layout_alignTop="@+id/day1"
            android:layout_toEndOf="@+id/day5"
            android:visibility="gone" />
        <Button
            android:id ="@+id/day7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="S"
            android:textColor="@color/textcolor"
            android:background="@drawable/button_normal"
            android:layout_alignTop="@+id/day1"
            android:layout_toEndOf="@+id/day6"
            android:visibility="gone" />

        <Button
            android:text=""
            android:id="@+id/button17"
            android:layout_below="@+id/checkBox3"
            android:layout_marginTop="15dp"
            android:background="@mipmap/bell"
            android:fitsSystemWindows="false"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="visible" />
        <TextView
            android:text="Default ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView49"
            android:layout_below="@+id/checkBox3"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button17"
            android:textSize="20sp"
            android:visibility="visible" />
        <CheckBox
            android:text="Vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:layout_below="@+id/checkBox3"
            android:layout_alignBaseline="@+id/button17"
            android:layout_alignEnd="@+id/switch3"
            android:visibility="visible" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button17"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/input_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Label"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:text=""
            android:id="@+id/button19"
            android:background="@mipmap/up_arrow"
            android:layout_below="@+id/input_layout_label"
            android:layout_alignEnd="@+id/switch3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:clickable="true"
            android:fitsSystemWindows="false"
            android:layout_height="24dp"
            android:layout_width="24dp" />
            <Button
                android:text=""
                android:clickable="true"
                android:id="@+id/hidden_button19"
                android:background="@mipmap/down_arrow"
                android:layout_below="@+id/input_layout_label"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@+id/switch3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:fitsSystemWindows="false" />



        <Button
            android:text=""
            android:id="@+id/button18"
            android:background="@mipmap/delete"
            android:fitsSystemWindows="false"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="visible"
            android:layout_below="@+id/input_layout_label"
            android:layout_alignStart="@+id/button17" />
    </RelativeLayout>
</android.support.v7.widget.CardView>