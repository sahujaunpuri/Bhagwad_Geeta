<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:id="@+id/rel_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toobar_title"
                android:text="@string/profile_title"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/font3"
                android:layout_centerVertical="true"
                android:layout_marginStart="44dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/input_name_wrapper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="44dp"
        android:text="Name"    />
    <EditText
        android:id="@+id/input_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:inputType="textCapSentences"
        android:hint="@string/name" />
    <TextView
        android:id="@+id/input_mobile_wrapper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/input_mobile_number"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:inputType="phone"
        android:hint="@string/mobile" />
    <TextView
        android:id="@+id/input_email_wrapper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="15dp"
        android:text="Email Address"/>

        <EditText
            android:id="@+id/input_email_id"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginStart="44dp"
            android:hint="@string/email" />

    <TextView
        android:id="@+id/input_address_wrapper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="15dp"
        android:text="Address"/>

    <EditText
        android:id="@+id/input_address"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_marginStart="44dp"
        android:hint="@string/address" />

    <TextView
        android:id="@+id/input_city_wrapper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="15dp"
        android:text="City"/>

    <EditText
        android:id="@+id/input_city"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_marginStart="44dp"
        android:hint="@string/city" />

    <Button android:id="@+id/btn_save"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="@string/save"
        android:background="@color/colorMaroon"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />


</LinearLayout>