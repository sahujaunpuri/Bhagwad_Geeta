<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setReminder"
    tools:context="com.application.aayush.geeta.SetReminder">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor1"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toobar_title"
                android:text="Set Reminder"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/font3"
                android:layout_centerVertical="true"
                android:layout_marginStart="64dp"/>

            <ImageButton
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@mipmap/white_arrow_1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:src="@mipmap/set_alarm"
            android:id="@+id/imageView7"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="115dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="Need a reminder for reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textSize="22sp"
            android:textColor="@color/colorMaroon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />
        <TextView
            android:text="Add a reminder to read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

    <Button
        android:text="Add Reminder"
        android:layout_width="230dp"
        android:id="@+id/button8"
        android:background="@color/backgroundcolor1"
        android:textColor="@color/colorwhite"
        android:layout_marginBottom="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="35dp"
        android:layout_marginTop="75dp" />
    </LinearLayout>
</RelativeLayout>
